# Server settings
PYTHONPATH=/path/to/SlideGenerator
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Database settings
DATABASE_URL=sqlite:///presentations.db

# Redis settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# LLM Provider settings
# Priority order: OPENAI > HUGGINGFACE > OLLAMA > TEMPLATE
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

HUGGINGFACE_API_KEY=
HUGGINGFACE_ENDPOINT=https://api-inference.huggingface.co/models/mistralai/Mistral-7B-Instruct-v0.2

OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2

# Slide generation settings
MAX_SLIDES=20
DEFAULT_THEME=professional
DEFAULT_FONT=Calibri
DEFAULT_ASPECT_RATIO=16:9

# Worker settings
WORKER_TIMEOUT=600
WORKER_MAX_RETRIES=3 